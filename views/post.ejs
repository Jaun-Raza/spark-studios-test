<%- include("partials/header"); -%>

  <h1 style="display: flex; align-items: center; gap: 1rem; font-family: 'Poppins', sans-serif;">
    <%=title%>  
  </h1>
  <button class="btn btn-primary" id="shareButton" style="font-family: 'Poppins', sans-serif;">Share</button>
  <h5 style="font-family: 'Poppins', sans-serif;">
    <%=date.slice(0, 25)%>
  </h5>
  <div style="width: 100%;
  display: flex;
  flex-direction: column;
  gap: 2rem;
  padding: 1rem;">
    <p class="post-content">
      <%=content%>
    </p>
  </div>

  <%- include("partials/footer"); -%>

    <script>
      const delBtn = document.getElementById('forDel');
      const form = document.querySelector('.form-hide');
      const shareBtn = document.getElementById('shareButton');

      delBtn.addEventListener('click', () => {
        if (form.style.display === "none") {
          form.style.display = "flex"
        } else {
          form.style.display = "none"
        }
      });

      shareBtn.addEventListener('click', function () {
        const currentPageUrl = window.location.href;

        navigator.clipboard.writeText(currentPageUrl)
          .then(() => {
            alert('Post Link copied to clipboard: ' + currentPageUrl);
          })
          .catch((error) => {
            console.error('Failed to copy Post Link: ', error);
          });
      });

    </script>
